    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "pino": "^10.1.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "dotenv-cli": "^11.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
